<%- include('includes/head'); %>
<%- include('includes/nav'); %>
<h1 class="text-center m-3"  style="font-weight: 500;">Agenda</h1>
<p  class="text-center lead my-4" style="font-weight: 300;" >
    <% if(user) {%>
        <i><span style="font-weight: 400;"><%- user.nome  %></span></i>
    <% } %> 
     crie ou edite seu contato abaixo</p>
<%- include('includes/messages')  %>
<% if(contato._id) {%>
    <form action="/contato/edit/<%=contato._id  %>" method="post" class=" contato">
<% }else { %>
    <form action="/contato/register" method="post" class=" contato">
<% } %> 
<div class="mx-auto"  style="width: 200px;" >
    <span class="genErr" hidden></span>
    <input type="hidden" name="_csrf" value="<%= csrfToken%>">
    
        <label for="nome">Nome</label>
   <input type="text" name="nome" class="form-control" value="<%= contato.nome %>">
    
    
        <label for="sobrenome">Sobrenome</label>
    <input type="text" name="sobrenome" class="form-control" value="<%= contato.sobrenome %>">
    
    
    <label for="cel">Cel</label><input type="tel" name="cel" class="form-control" value="<%= contato.telefone %>">
    
    <label for="email">E-mail</label><input type="email" name="email" class="form-control" value="<%= contato.email %>">
    <button class="btn-default m-3 success mx-auto border-0 bg-success text-white rounded p-2"  style="width: 200px;">Salvar</button>
</div>


</form>

